<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/twotone_cancel_24"
      android:background="@null"
      android:onClick="closeAction"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:text="Edit Group Details"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textAlignment="center"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:text="Name"
      android:textSize="18sp"
      android:textStyle="bold|italic" />

  <EditText
      android:id="@+id/editGroupName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Group Name"
      android:inputType="text" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Type"
      android:textSize="18sp"
      android:textStyle="bold|italic" />

  <EditText
      android:id="@+id/editGroupType"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Group Type"
      android:inputType="text" />

  <Button
      android:id="@+id/saveButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:padding="20dp"
      android:textSize="16sp"
      android:layout_gravity="center"
      android:text="Save Changes"
      android:onClick="saveEditAction"/>
</LinearLayout>
